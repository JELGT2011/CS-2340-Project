<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moe_money_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AccountInfo" >

    <Button
        android:id="@+id/bNewAccount"
        style="@style/custom_button_sorbus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/button_new_account" />

    <Button
        android:id="@+id/button_create_new_transaction"
        style="@style/custom_button_breaker_bay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bNewAccount"
        android:layout_alignLeft="@+id/bNewAccount"
        android:layout_marginBottom="17dp"
        android:text="@string/button_create_new_transaction" />
    
    <Button
        android:id="@+id/button_view_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_create_new_transaction"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/button_view_report" />

    <TableLayout
        android:id="@+id/table_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dip"
                android:text="TextView" />
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
           		android:gravity="left"
                android:text="TextView" />
             
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
           		android:gravity="left"
                android:text="TextView" />

        </TableRow>
    </TableLayout>

</RelativeLayout>