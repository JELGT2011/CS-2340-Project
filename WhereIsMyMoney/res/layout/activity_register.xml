<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moe_money_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_instructions"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/edit_registration_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:hint="@string/edit_registration_first_name" >

        <requestFocus />

    </EditText>

    <EditText
        android:hint="@string/edit_registration_last_name"
        android:id="@+id/edit_registration_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edit_registration_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:hint="@string/edit_registration_email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_registration_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:hint="@string/edit_registration_username"/>

    <EditText
        android:id="@+id/edit_registration_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:hint="@string/edit_registration_password"
        android:inputType="textPassword"/>

    <EditText
        android:hint="@string/edit_registration_password_confirm"
        android:id="@+id/edit_registration_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/custom_edit_text_rounded"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button_confirm_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        style="@style/custom_button_breaker_bay"
        android:text="@string/button_confirm" />

</LinearLayout>
