<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="312dp"
        android:layout_height="150dp"
        android:text="@string/title_register_congrats"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_goToLoginFromConfirmRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_goToLoginFromConfirmRegistration" />

    <Button
        android:id="@+id/button_goToRegisterFromConfirmRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_register_another" />

</LinearLayout>
